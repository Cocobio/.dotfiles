# vnc functions
# https://wiki.termux.com/wiki/Graphical_Environment
vnc_count=0

function start-vnc {
    [ $vnc_count -eq 0 ] && vnc_count=1 && vncserver -localhost
}

function kill-vnc {
    [ $vnc_count -eq 1 ] && vnc_count=0 && vncserver -kill :1
    # rm -rf /tmp/.X1-lock
    # rm -rf /tmp/.X11-unix/X1
}
